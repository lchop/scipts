# mbot udev rules

# sensor board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board1",SYMLINK+="mbot/mbot-sensorboard",GROUP="dialout",OWNER="socrob"

# base motor board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board2",SYMLINK+="mbot/mbot-motorboard",GROUP="dialout",OWNER="socrob"

# interaction board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board3",SYMLINK+="mbot/mbot-interactionboard",GROUP="dialout",OWNER="socrob"

# funny arms board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board4",SYMLINK+="mbot/mbot-armsboard",GROUP="dialout",OWNER="socrob"

# rfid reader
SUBSYSTEMS=="usb",ATTRS{idProduct}=="2303",ATTRS{idVendor}=="067b",SYMLINK+="mbot/mbot-rfidreader",GROUP="dialout",OWNER="socrob"

# imu
SUBSYSTEMS=="usb",KERNEL=="ttyACM[0-9]*",ATTRS{idProduct}=="8036",ATTRS{idVendor}=="2341",SYMLINK+="mbot/mbot-imu",GROUP="dialout",OWNER="socrob"

# hokuyo laser scanners
KERNEL=="ttyACM[0-9]*", ACTION=="add", ATTRS{idVendor}=="15d1", MODE="0666", GROUP="dialout", PROGRAM="/home/socrob/scripts/udev_rules/mbot_hokuyo.sh %N",SYMLINK+="mbot/hokuyo_%c"
