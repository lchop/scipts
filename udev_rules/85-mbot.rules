# mbot udev rules

# sensor board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board1",SYMLINK+="mbot/sensorboard",GROUP="dialout",OWNER="socrob"

# base motor board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board2",SYMLINK+="mbot/motorboard",GROUP="dialout",OWNER="socrob"

# interaction board
SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board3",SYMLINK+="mbot/interactionboard",GROUP="dialout",OWNER="socrob"

# funny arms board
# SUBSYSTEMS=="usb",ATTRS{idProduct}=="6001",ATTRS{idVendor}=="0403",ATTRS{serial}=="board4",SYMLINK+="mbot/armsboard",GROUP="dialout",OWNER="socrob"

# rfid reader
# SUBSYSTEMS=="usb",ATTRS{idProduct}=="2303",ATTRS{idVendor}=="067b",SYMLINK+="mbot/rfidreader",GROUP="dialout",OWNER="socrob"

# imu
# SUBSYSTEMS=="usb",KERNEL=="ttyACM[0-9]*",ATTRS{idProduct}=="8036",ATTRS{idVendor}=="2341",SYMLINK+="mbot/imu",GROUP="dialout",OWNER="socrob"

# hokuyo laser scanners
SUBSYSTEMS=="usb",KERNEL=="ttyACM[0-9]*",OWNER="socrob",MODE="0666",GROUP="dialout",ACTION=="add",ATTRS{idVendor}=="15d1",ATTRS{idProduct}=="0000",PROGRAM="/home/socrob/scripts/udev_rules/mbot_hokuyo.sh /dev/%k q",SYMLINK+="mbot/hokuyo-%c",event_timeout=60
